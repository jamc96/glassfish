#!/bin/bash
# File Managed by Puppet 
#
# script to set configurations on GLASSFISH
#
# global variables
ASADMIN=<%= @asadmin_path %>
PASSWDPATH=<%= @as_admin_path %>
# [SET]
<% unless @set.empty? %>
    <% @set.each do |configs| -%>
        $ASADMIN --user admin --port 40575 --passwordfile=$PASSWDPATH set <%= configs %>
    <% end -%>
<% end -%>
